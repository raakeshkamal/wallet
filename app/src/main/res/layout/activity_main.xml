<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/woi_home_bgrd"
    tools:context=".MainActivity"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/disp_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/userpic" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/user_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
         />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
        android:layout_marginTop="-10dp">
    
    <LinearLayout 
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
        android:layout_marginLeft="13dp">

        <ImageView
        android:id="@+id/offer_wall"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/gift"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="25dp"
            android:layout_marginLeft="-25dp" />

        <ImageView
        android:id="@+id/refer_a_friend"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/refer_a_friend_page_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="10dp" />
        
        <ImageView
        android:id="@+id/transfer"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/transfer"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="30dp"
            android:layout_marginBottom="-30dp" />
    
        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-20dp"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Offer wall"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="30dp"
                android:layout_gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Refer a friend"
                android:textStyle="bold"
                android:textColor="#ffffff"

                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Transfer"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                />

        </LinearLayout>


    <LinearLayout
    android:layout_width="366dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
        android:layout_marginLeft="13dp">

        <ImageView
        android:id="@+id/math_challenge"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/math"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

            android:layout_marginBottom="0dp"
            android:layout_marginLeft="-25dp"
            android:layout_marginRight="25dp" />

        <ImageView
        android:id="@+id/memory_challenge"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/memory"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="-8dp" />
        
        <ImageView
        android:id="@+id/monthly_challenge"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/monthly"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginRight="0dp" />
    
        </LinearLayout>

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="-35dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="      Math \n  challenge"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="-40dp"
                android:layout_marginRight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="  Memory \nchallenge"
                android:textColor="#ffffff"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Monthly \nchallenge"
                android:textColor="#ffffff"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="-40dp"
                android:layout_weight="0.06" />

        </LinearLayout>

    <LinearLayout
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
        android:layout_marginTop="-30dp">

        <ImageView
        android:id="@+id/friends"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/friends"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

            android:layout_marginLeft="-30dp"
            android:layout_marginRight="25dp" />

        <ImageView
        android:id="@+id/shopping"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/shopping"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="-0dp" />

        <ImageView
        android:id="@+id/transactions"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/transactions"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="-30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="-20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Friends"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="-40dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shopping"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="-30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Transactions"
                android:textColor="#ffffff"
                android:layout_marginRight="-60dp"
                android:layout_marginLeft="60dp" />

        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>